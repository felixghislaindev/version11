
<%include partials/header%>
<div class="container">
  <div class="row">

        <h1 style="text-align:center;">EDIT <%=campground.name %>
          </h1>

        <div style="width:30%; margin:0 auto; margin:20px auto;">
          <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" placeholder="Enter Here" name="campground[name]" value=" <%=campground.name %>">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Enter Images url" name="campground[image]" value=" <%=campground.image%>">
            </div>
            <div class="form-group">
                <input type="text" placeholder="Description Here" name="campground[description]" value=" <%=campground.description %>" >
                
            </div>
            <div class="form-group">

              <button style="width:50%;"class="btn btn-lg btn-block btn-primary">Submit</button>
            </div>


            </form>
        </div>



  </div>
</div>


<%include partials/footer%>