<%include partials/header%>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Yelpcam</p>
      <div class="list-group">
        <li class="list-group-item active">info 1</li>
        <li class="list-group-item">info 2</li>
        <li class="list-group-item">info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class = "image.resposive"src="<%= campground.image%>"  alt="">
        <div class="caption-full">
          
            <h4 class="pull-right">VISITED(15)</h4>
       
          <h4>
            <a href=""class="camp-name"><%= campground.name%></a>
          </h4>
        
          <p><%= campground.description%></p> <span class=""> created by : <%= campground.author.username%> </span>
        </div>
      </div>
      <div class="well">
        <div class="text-right"> <a class="btn btn-success " href="/campgrounds/<%= campground._id %>/comment/new">Comment</a></div>
      <hr>
      <% for(var i = 0; i < campground.comments.length; i++){ %>
      <div class="row" >
        <div class="col-md-12">
            <strong><%= campground.comments[i].author.username %></strong>
            <span class="pull-right">5 days ago</span>
            <p><%= campground.comments[i].text %></p>
            <% if(currentUser && campground.comments[i].author.id.equals(currentUser._id)){%>
            <a class="btn btn-xs btn-warning"  href="/campgrounds/<%= campground._id %>/comment/<%= campground.comments[i]._id %>/edit">Edit</a>

            <form action="/campgrounds/<%= campground._id %>/comment/<%= campground.comments[i]._id %>?-method=DELETE" method=POST>
              <input type="submit" class=" btn btn-xs btn-danger" value="Delete">
            </form>
            <% } %>
        </div>
      </div>
          
      <% } %>
      </div>
      
    
    </div>
  </div>
</div>


<%include partials/footer%>
